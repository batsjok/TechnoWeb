@using TechnoWeb.entity
@model IEnumerable<TechnoWeb.Models.ProductModel>

<div class="container">
    <div class="row">
        @foreach (var product in Model)
        {
            <div class="col-md-4">
                <div class="card mb-4 shadow-sm">
                    <img src="data:image/png;base64," alt="@product.Name" class="img-fluid ">
                    <div class="card-body">
                        <h5 class="card-title">
                            <a href="/Home/Details/@product.Id">@product.Name</a>
                        </h5>
                        <p class="card-text">@product.Description</p>
                        <div class="d-flex justify-content-between align-items-center">
                            <small class="text-muted product-price ">
                                <i class="fa fa-try" aria-hidden="true"></i>
                                @product.Price.ToString("C")
                            </small>
                            <a href="/Home/Details/@product.Id" class="btn btn-primary btn-xxs float-right">
                            <i class="fa fa-try" aria-hidden="true"></i>
                             Detaylar
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>